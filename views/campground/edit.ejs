<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit Campground</h1>

    <div style="width: 30%; margin: 50px auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= camp.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="img" value="<%= camp.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= camp.description %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds">Back</a>
    </div>
</div>

<%- include("../partials/footer") %>

