<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>

    <div style="width: 30%; margin: 50px auto;">
        <form action="/campgrounds/<%=campId%>/comments/<%= comment._id%>?_method=PUT" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds/<%=campId%>">Back</a>
    </div>
</div>

<%- include("../partials/footer") %>

